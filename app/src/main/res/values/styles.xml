<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="et_white_16">
        <item name="android:textColorHint">@color/font_9</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_white_0</item>
        <item name="android:textCursorDrawable">@drawable/et_cursor</item>
    </style>
    <style name="et_white_12">
        <item name="android:textColorHint">@color/font_9</item>
        <item name="android:textSize">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_white_0</item>
        <item name="android:textCursorDrawable">@drawable/et_cursor</item>
    </style>

    <!--普通水平分割线-->
    <style name="divider_nomal_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray_divide</item>
    </style>

    <style name="notitle">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="btn_red_normal">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/bg_white</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sel_btn_red</item>
    </style>
</resources>
