<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_answer_head"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/head" />

            <TextView
                android:id="@+id/tv_answer_name"
                style="@style/font_6_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="海边的卡夫卡" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_answer_date"
            style="@style/font_9_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:text="5分钟前" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_answer_content"
        style="@style/font_3_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="尤其是像卡夫卡作品这样的,尽管享誉世界一个世纪,尽管它影响了数代中国人。 本报日前采访了《卡夫卡全集》的主编叶廷芳" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_answer_best"
            style="@style/btn_red_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="最佳答案"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_answer_praiseCount"
            style="@style/font_9_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22" />

        <ImageView
            android:id="@+id/iv_answer_praise"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/praise_nor" />

        <TextView
            android:id="@+id/tv_answer_setBest"
            style="@style/btn_red_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="采纳"
            android:visibility="gone" />


    </LinearLayout>


</LinearLayout>