<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.kingja.ui.SquaredImageView
            android:id="@+id/iv_giftImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/gift_cake" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_giftName"
                style="@style/font_3_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="滋华士蛋糕" />

            <ImageView
                android:id="@+id/iv_giftLevel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/level5" />


        </LinearLayout>

        <RelativeLayout
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/coin" />

                <TextView
                    android:id="@+id/tv_giftCost"
                    style="@style/font_red_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="202" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_giftCount"
                style="@style/font_red_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="X8" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>