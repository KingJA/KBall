<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray_kj"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2b2727"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/head" />


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_head"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_level"
                        style="@style/font_9_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业人士" />

                    <ImageView
                        android:id="@+id/iv_level"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/level5" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_userName"
                    style="@style/font_f_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="海边的卡夫卡" />
            </LinearLayout>
            <TextView
                android:text="关注"
                style="@style/btn_red_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_head"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/ll_attention"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    style="@style/font_f_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注" />

                <TextView
                    android:id="@+id/tv_attentionCount"
                    style="@style/font_9_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--" />
            </LinearLayout>

            <View style="@style/divider_nomal_vertical" />

            <LinearLayout
                android:id="@+id/ll_fans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    style="@style/font_f_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝" />

                <TextView
                    android:id="@+id/tv_fansCount"
                    style="@style/font_9_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:maxLines="2"
        android:padding="12dp"
        style="@style/font_9_12"
        android:text="新鲜出炉的ConstraintLayout完全改变了安卓app界面布局设计的游戏规则。这篇文章帮助你理解ConstraintLayout的基本知识"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View style="@style/divider_nomal_horizontal"/>
</LinearLayout>

