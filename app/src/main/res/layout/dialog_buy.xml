<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_buy_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/gift_cake"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_buy_img"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_dialog_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_buy_giftName"
                    style="@style/font_3_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="华莱士蛋糕" />

                <ImageView
                    android:id="@+id/iv_buy_giftLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/level5" />
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_dialog_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_marginRight="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/coin" />

                    <TextView
                        android:id="@+id/tv_buy_giftCost"
                        style="@style/font_red_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="58" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:tint="@color/red"
                        android:id="@+id/iv_buy_reduce"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/svg_reduce" />

                    <TextView
                        android:id="@+id/iv_buy_count"
                        style="@style/font_3_16"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1" />

                    <ImageView
                        android:tint="@color/red"
                        android:id="@+id/iv_buy_add"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/svg_add" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="end">


        <TextView
            android:id="@+id/tv_buy_cancle"
            style="@style/font_9_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:text="取消" />

        <TextView
            android:id="@+id/tv_buy_confirm"
            style="@style/font_red_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买" />
    </LinearLayout>
</LinearLayout>