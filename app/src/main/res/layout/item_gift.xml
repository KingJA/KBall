<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ae0" />

    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_giftImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_giftImg"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_gitfName"
                style="@style/font_3_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="多福居蛋糕" />

            <TextView
                android:id="@+id/tv_gitfDes"
                style="@style/font_9_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:text="黑森林蛋糕(Schwarzwaelde)是德国著名甜点，是受德国法律保护的甜点之一，在德文里全名" />


            <LinearLayout
                android:id="@+id/ll_buy"
                android:layout_marginTop="4dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="end"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:background="@drawable/sharp_green"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_giftCost"
                    android:layout_marginLeft="4dp"
                    style="@style/font_f_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="68" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>